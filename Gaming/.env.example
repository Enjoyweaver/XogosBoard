# ================================
# Emotion Quest Game - Environment Variables Template
# ================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# ================================
# Server Configuration
# ================================

# Server Environment (development, production, testing)
NODE_ENV=development

# Server Port
PORT=5000

# API Base URL
API_BASE_URL=http://localhost:5000

# Client URL (for CORS and redirects)
CLIENT_URL=http://localhost:3000

# Server Host
HOST=localhost

# ================================
# Database Configuration
# ================================

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/emotion_quest_dev
MONGODB_TEST_URI=mongodb://localhost:27017/emotion_quest_test

# Database Options
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=5

# ================================
# Redis Configuration (Session Storage)
# ================================

# Redis Connection
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Redis Database Numbers (0-15)
REDIS_SESSION_DB=0
REDIS_CACHE_DB=1
REDIS_GAME_STATE_DB=2

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_TIMEOUT=24h

# ================================
# Authentication & Security
# ================================

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-minimum-32-characters-long
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-jwt-refresh-secret-different-from-main
JWT_REFRESH_EXPIRE=30d

# Bcrypt Salt Rounds (10-12 recommended)
BCRYPT_SALT_ROUNDS=12

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# Game Configuration
# ================================

# Game Settings
MAX_PLAYERS_PER_ROOM=10
MIN_PLAYERS_TO_START=4
GAME_ROUND_DURATION=300000
TASK_COMPLETION_TIMEOUT=60000

# Monster Configuration
POSITIVE_MONSTERS=Happy,Love
NEGATIVE_MONSTERS=Sad,Mad
PANIC_MONSTER=Panic

# Map Settings
DEFAULT_MAPS=School,Mall,Home
MAX_MAPS_PER_GAME=3

# Educational Content
ENABLE_PROGRESS_TRACKING=true
ENABLE_THERAPEUTIC_ANALYTICS=true
MIN_AGE_REQUIREMENT=8

# ================================
# File Upload & Storage
# ================================

# File Upload Limits
MAX_FILE_SIZE=5242880
MAX_FILES_PER_UPLOAD=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,audio/mpeg,audio/wav

# Upload Directories
UPLOAD_PATH=./uploads
AVATAR_UPLOAD_PATH=./uploads/avatars
ASSET_UPLOAD_PATH=./uploads/assets

# Cloud Storage (if using AWS S3, Google Cloud, etc.)
CLOUD_STORAGE_PROVIDER=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=emotion-quest-assets

# ================================
# Email Configuration
# ================================

# Email Service Provider
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# Email Credentials
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-app-specific-password

# Email Settings
FROM_EMAIL=noreply@emotionquest.com
FROM_NAME=Emotion Quest Game

# Email Templates
WELCOME_EMAIL_TEMPLATE=welcome
PASSWORD_RESET_TEMPLATE=password-reset
PROGRESS_REPORT_TEMPLATE=progress-report

# ================================
# Logging Configuration
# ================================

# Log Levels (error, warn, info, http, verbose, debug, silly)
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Enable/Disable Specific Logs
LOG_REQUESTS=true
LOG_GAME_EVENTS=true
LOG_USER_ACTIONS=true
LOG_ERRORS=true

# ================================
# External APIs & Services
# ================================

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Social Authentication (if implementing)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Educational Content APIs
EDUCATIONAL_CONTENT_API_KEY=
THERAPEUTIC_DATABASE_URL=

# Push Notifications
PUSH_NOTIFICATION_KEY=
FIREBASE_SERVER_KEY=

# ================================
# Development & Testing
# ================================

# Debug Settings
DEBUG_MODE=true
VERBOSE_LOGGING=false
MOCK_EXTERNAL_APIS=true

# Testing Configuration
TEST_DATABASE_RESET=true
ENABLE_TEST_ROUTES=true
MOCK_USER_DATA=false

# Development Tools
ENABLE_API_DOCS=true
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true

# Hot Reload & Live Updates
ENABLE_HOT_RELOAD=true
WEBSOCKET_HEARTBEAT_INTERVAL=25000

# ================================
# Performance & Scaling
# ================================

# Caching
CACHE_TTL=3600
ENABLE_MEMORY_CACHE=true
ENABLE_REDIS_CACHE=true

# Database Performance
DB_CONNECTION_TIMEOUT=30000
DB_QUERY_TIMEOUT=10000

# Game Performance
MAX_CONCURRENT_GAMES=50
GAME_STATE_SYNC_INTERVAL=100
PLAYER_UPDATE_RATE=60

# Resource Limits
MAX_MEMORY_USAGE=512mb
MAX_CPU_USAGE=80

# ================================
# Security Headers & Protection
# ================================

# Security Settings
ENABLE_HELMET=true
ENABLE_CSRF_PROTECTION=true
ENABLE_XSS_PROTECTION=true

# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline'
CSP_STYLE_SRC='self' 'unsafe-inline'
CSP_IMG_SRC='self' data: https:

# ================================
# Monitoring & Health Checks
# ================================

# Health Check Endpoints
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=30000

# Metrics Collection
ENABLE_METRICS=true
METRICS_COLLECTION_INTERVAL=60000

# Alert Thresholds
CPU_ALERT_THRESHOLD=90
MEMORY_ALERT_THRESHOLD=85
ERROR_RATE_THRESHOLD=5

# ================================
# Backup & Recovery
# ================================

# Database Backup
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Game State Backup
ENABLE_GAME_STATE_BACKUP=true
GAME_BACKUP_INTERVAL=hourly

# ================================
# Compliance & Privacy
# ================================

# COPPA Compliance (Children's Online Privacy Protection Act)
ENABLE_COPPA_COMPLIANCE=true
REQUIRE_PARENTAL_CONSENT=true
MIN_AGE_WITHOUT_CONSENT=13

# GDPR Compliance
ENABLE_GDPR_COMPLIANCE=true
DATA_RETENTION_PERIOD=365
ENABLE_DATA_EXPORT=true
ENABLE_DATA_DELETION=true

# Privacy Settings
ANONYMOUS_ANALYTICS=true
ENCRYPT_USER_DATA=true
LOG_USER_ACTIONS=false

# ================================
# Educational Integration
# ================================

# Learning Management System Integration
LMS_PROVIDER=
LMS_API_KEY=
LMS_BASE_URL=

# Educational Standards
CURRICULUM_STANDARD=SEL
GRADE_LEVELS=K-12
SUBJECT_AREAS=Social-Emotional-Learning,Mental-Health

# Progress Reporting
ENABLE_TEACHER_DASHBOARD=true
ENABLE_PARENT_REPORTS=true
REPORT_GENERATION_SCHEDULE=weekly

# ================================
# Game Analytics & Insights
# ================================

# Player Behavior Analytics
TRACK_GAMEPLAY_METRICS=true
TRACK_LEARNING_OUTCOMES=true
TRACK_EMOTIONAL_PROGRESS=true

# A/B Testing
ENABLE_AB_TESTING=false
AB_TEST_PERCENTAGE=10

# Custom Events
TRACK_CUSTOM_EVENTS=true
EVENT_BATCH_SIZE=100
EVENT_FLUSH_INTERVAL=30000