# ================================
# Emotion Quest Unity Game - Environment Variables Template
# ================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# ================================
# Unity Development Configuration
# ================================

# Unity Version (for team consistency)
UNITY_VERSION=2022.3.15f1

# Development Environment (development, staging, production)
DEVELOPMENT_MODE=development

# Build Configuration
BUILD_TARGET=StandaloneWindows64
BUILD_PATH=./Builds
BUILD_NAME=EmotionQuest

# Debug Settings
ENABLE_DEBUG_LOGS=true
ENABLE_PROFILER=true
ENABLE_DEVELOPMENT_BUILD=true

# ================================
# Game Configuration
# ================================

# Game Settings
GAME_VERSION=1.0.0
MAX_PLAYERS_PER_ROOM=10
MIN_PLAYERS_TO_START=4
GAME_ROUND_DURATION=300
TASK_COMPLETION_TIMEOUT=60

# Monster Configuration
DEFAULT_MONSTER_SPEED=5.0
PANIC_MONSTER_SPEED=6.0
TRANSFORMATION_DURATION=2.0

# Educational Settings
ENABLE_PROGRESS_TRACKING=true
ENABLE_THERAPEUTIC_ANALYTICS=true
MIN_AGE_REQUIREMENT=8
REQUIRE_PARENTAL_CONSENT=true

# ================================
# Unity Netcode Configuration
# ================================

# Network Settings
DEFAULT_PORT=7777
MAX_CONNECTION_ATTEMPTS=5
CONNECTION_TIMEOUT=10000
HEARTBEAT_INTERVAL=1000

# Server Configuration
SERVER_LISTEN_ADDRESS=127.0.0.1
SERVER_PORT=7777
USE_RELAY=false
MAX_CLIENTS=10

# Unity Relay Service (if using Unity's relay)
UNITY_PROJECT_ID=your-unity-project-id-here
RELAY_JOIN_CODE=
USE_UNITY_RELAY=false

# ================================
# Unity Services Configuration
# ================================

# Unity Analytics
UNITY_ANALYTICS_ENABLED=true
UNITY_ANALYTICS_PROJECT_ID=your-analytics-project-id

# Unity Cloud Build (if using)
UNITY_CLOUD_BUILD_TARGET_ID=
UNITY_CLOUD_BUILD_API_KEY=

# Unity Authentication (if using)
UNITY_AUTH_PROJECT_ID=
UNITY_AUTH_ENVIRONMENT=development

# ================================
# Backend API Configuration (Optional)
# ================================

# API Endpoints
API_BASE_URL=http://localhost:3000
API_TIMEOUT=30000
API_RETRY_COUNT=3

# Authentication
JWT_SECRET=your-jwt-secret-for-api-communication
API_KEY=your-backend-api-key

# Database Connection (if using backend)
DATABASE_URL=mongodb://localhost:27017/emotion_quest_dev
REDIS_URL=redis://localhost:6379

# ================================
# Xogos Platform Integration (Future)
# ================================

# Xogos API Configuration
XOGOS_API_URL=https://api.xogos.com
XOGOS_API_KEY=your-xogos-api-key-here
XOGOS_CLIENT_ID=your-xogos-client-id
XOGOS_CLIENT_SECRET=your-xogos-client-secret

# Xogos Integration Settings
ENABLE_XOGOS_INTEGRATION=false
XOGOS_ENVIRONMENT=sandbox
XOGOS_WEBHOOK_URL=

# Platform Features
ENABLE_XOGOS_AUTH=false
ENABLE_XOGOS_ANALYTICS=false
ENABLE_XOGOS_LEADERBOARDS=false

# ================================
# Educational Compliance
# ================================

# COPPA Compliance (Children's Online Privacy Protection Act)
ENABLE_COPPA_COMPLIANCE=true
COPPA_CONSENT_REQUIRED=true
MIN_AGE_WITHOUT_CONSENT=13
PARENTAL_EMAIL_VERIFICATION=true

# FERPA Compliance (Family Educational Rights and Privacy Act)
ENABLE_FERPA_COMPLIANCE=true
EDUCATIONAL_USE_ONLY=true
STUDENT_DATA_ENCRYPTION=true

# GDPR Compliance (General Data Protection Regulation)
ENABLE_GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=365
ENABLE_DATA_EXPORT=true
ENABLE_DATA_DELETION=true

# Privacy Settings
ANONYMIZE_USER_DATA=true
COLLECT_MINIMAL_DATA=true
ENABLE_PRIVACY_DASHBOARD=true

# ================================
# Audio Configuration
# ================================

# Audio Settings
MASTER_VOLUME=1.0
MUSIC_VOLUME=0.7
SFX_VOLUME=0.8
VOICE_VOLUME=1.0

# Audio Formats
AUDIO_COMPRESSION=Vorbis
AUDIO_QUALITY=Medium
ENABLE_3D_AUDIO=false

# ================================
# Graphics Configuration
# ================================

# Graphics Settings
TARGET_FRAMERATE=60
VSYNC_ENABLED=true
QUALITY_LEVEL=Medium
RESOLUTION_WIDTH=1920
RESOLUTION_HEIGHT=1080

# Mobile Graphics (if targeting mobile)
MOBILE_TARGET_FRAMERATE=30
MOBILE_QUALITY_LEVEL=Low
MOBILE_TEXTURE_COMPRESSION=true

# WebGL Settings (if targeting web)
WEBGL_MEMORY_SIZE=512
WEBGL_COMPRESSION_FORMAT=Gzip

# ================================
# Platform Specific Settings
# ================================

# Windows Settings
WINDOWS_FULL_SCREEN=false
WINDOWS_RESIZABLE=true

# macOS Settings
MACOS_BUNDLE_ID=com.yourcompany.emotionquest
MACOS_FULL_SCREEN=false

# iOS Settings (if targeting mobile)
IOS_BUNDLE_ID=com.yourcompany.emotionquest
IOS_TARGET_VERSION=11.0
IOS_DEVICE_FAMILY=1,2

# Android Settings (if targeting mobile)
ANDROID_PACKAGE_NAME=com.yourcompany.emotionquest
ANDROID_MIN_SDK_VERSION=21
ANDROID_TARGET_SDK_VERSION=33

# ================================
# Analytics & Monitoring
# ================================

# Game Analytics
ENABLE_GAMEPLAY_ANALYTICS=true
ENABLE_PERFORMANCE_ANALYTICS=true
ENABLE_EDUCATIONAL_METRICS=true

# Analytics Providers
GOOGLE_ANALYTICS_ID=
FIREBASE_PROJECT_ID=
UNITY_ANALYTICS_ENABLED=true

# Crash Reporting
ENABLE_CRASH_REPORTING=true
CRASHLYTICS_API_KEY=
SENTRY_DSN=

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# ================================
# Content & Localization
# ================================

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr
ENABLE_RTL_LANGUAGES=false

# Content Management
CONTENT_CDN_URL=
DYNAMIC_CONTENT_ENABLED=false
CONTENT_UPDATE_CHECK_INTERVAL=3600

# Educational Content
CURRICULUM_STANDARD=SEL
GRADE_LEVELS=K-12
SUBJECT_AREAS=Social-Emotional-Learning

# ================================
# Security Configuration
# ================================

# Encryption
ENABLE_DATA_ENCRYPTION=true
ENCRYPTION_KEY=your-32-character-encryption-key
HASH_SALT=your-unique-salt-here

# Network Security
ENABLE_SSL=true
SSL_CERTIFICATE_PATH=
SSL_PRIVATE_KEY_PATH=

# Anti-Cheat
ENABLE_ANTI_CHEAT=false
ANTI_CHEAT_PROVIDER=

# ================================
# Development Tools
# ================================

# Debugging
ENABLE_CONSOLE=true
ENABLE_DEBUG_UI=true
LOG_LEVEL=Info
LOG_FILE_PATH=./Logs

# Testing
ENABLE_AUTOMATED_TESTING=false
TEST_RUNNER_TIMEOUT=300
ENABLE_UNIT_TESTS=true

# Profiling
ENABLE_DEEP_PROFILING=false
PROFILER_ENABLED=true
MEMORY_PROFILER_ENABLED=false

# ================================
# Build Configuration
# ================================

# Build Settings
AUTO_BUILD_ENABLED=false
BUILD_ON_COMMIT=false
BUILD_COMPRESSION=LZ4

# Distribution
DISTRIBUTION_PLATFORM=
STEAM_APP_ID=
ITCH_IO_PROJECT=
APP_STORE_CONNECT_KEY=

# Code Signing (for production builds)
CODE_SIGN_IDENTITY=
PROVISIONING_PROFILE=

# ================================
# Backup & Recovery
# ================================

# Data Backup
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./Backups

# Cloud Sync
ENABLE_CLOUD_SAVE=false
CLOUD_PROVIDER=
CLOUD_STORAGE_BUCKET=

# ================================
# Accessibility Features
# ================================

# Accessibility Settings
ENABLE_COLORBLIND_SUPPORT=true
ENABLE_SCREEN_READER=true
ENABLE_HIGH_CONTRAST=true
FONT_SIZE_SCALING=true

# Inclusive Design
ENABLE_SUBTITLES=true
ENABLE_AUDIO_DESCRIPTIONS=false
SIMPLIFIED_UI_MODE=false

# ================================
# Social Features (Future)
# ================================

# Social Integration
ENABLE_FRIEND_SYSTEM=false
ENABLE_CHAT=true
CHAT_FILTER_ENABLED=true
PROFANITY_FILTER_LEVEL=Strict

# Teacher/Parent Features
ENABLE_TEACHER_DASHBOARD=true
ENABLE_PARENT_REPORTS=true
REPORT_EMAIL_NOTIFICATIONS=false

# ================================
# Performance Optimization
# ================================

# Memory Management
MAX_MEMORY_USAGE=512
GARBAGE_COLLECTION_MODE=Incremental
OBJECT_POOLING_ENABLED=true

# Network Optimization
NETWORK_TICK_RATE=20
CLIENT_PREDICTION_ENABLED=true
LAG_COMPENSATION_ENABLED=true

# Asset Loading
PRELOAD_CRITICAL_ASSETS=true
ASYNC_LOADING_ENABLED=true
TEXTURE_STREAMING_ENABLED=false